<Window x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- Стиль для списка файлов -->
        <Style x:Key="FileListStyle" TargetType="ListView">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
        </Style>

        <!-- Контекстное меню -->
        <ContextMenu x:Key="FileContextMenu">
            <MenuItem Header="Открыть" Click="MenuOpen_Click"/>
            <MenuItem Header="Скачать" Click="MenuDownload_Click"/>
            <Separator/>
            <MenuItem Header="Удалить" Click="MenuDelete_Click"/>
            <MenuItem Header="Переименовать" Click="MenuRename_Click"/>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightBlue" Padding="10,5" BorderThickness="0,0,0,1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сервер:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="tbServer" Text="127.0.0.1" Width="100" Margin="5,0" VerticalContentAlignment="Center"/>

                <TextBlock Text="Порт:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox x:Name="tbPort" Text="5000" Width="50" Margin="5,0" VerticalContentAlignment="Center"/>

                <Button x:Name="btnConnect" Content="Подключить" Style="{StaticResource ActionButtonStyle}" 
                        Click="Connect"/>

                <Separator Width="20" Visibility="Hidden"/>

                <StackPanel Orientation="Horizontal" Name="autorizationPanel">
                    <TextBlock Text="Логин:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <TextBox x:Name="tbLogin" Text="vlad" Width="80" Margin="5,0" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Пароль:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <PasswordBox x:Name="tbPassword" Password="123" Width="80" Margin="5,0" VerticalContentAlignment="Center"/>

                    <Button x:Name="btnLogin" Content="Войти" Style="{StaticResource ActionButtonStyle}" 
                            Click="Login_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Панель навигации -->
        <Border Grid.Row="1" Background="LightYellow" Padding="10,5" BorderThickness="0,0,0,1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnUp" Content="📁 Наверх" Style="{StaticResource ActionButtonStyle}" 
                        Click="BtnUp_Click" ToolTip="Перейти в родительскую папку"/>

                <Button x:Name="btnRefresh" Content="🔄 Обновить" Style="{StaticResource ActionButtonStyle}" 
                        Click="BtnRefresh_Click" ToolTip="Обновить список файлов"/>

                <Button x:Name="btnUpload" Content="⬆️ Загрузить" Style="{StaticResource ActionButtonStyle}" 
                        Click="BtnUpload_Click" ToolTip="Загрузить файл на сервер"/>

                <Button x:Name="btnDownload" Content="⬇️ Скачать" Style="{StaticResource ActionButtonStyle}" 
                        Click="BtnDownload_Click" ToolTip="Скачать выбранный файл"/>

                <Button x:Name="btnCreateFolder" Content="📁 Создать папку" Style="{StaticResource ActionButtonStyle}" 
                        Click="BtnCreateFolder_Click" ToolTip="Создать новую папку" Margin="20,2,2,2"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" Padding="10,5" BorderThickness="0,0,0,1" BorderBrush="LightGray">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Текущий путь:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBox x:Name="tbCurrentPath" IsReadOnly="True" VerticalAlignment="Center" 
                         Text="Не подключено" Width="600" Padding="5,2" Background="WhiteSmoke"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3">
            <ListView x:Name="listViewFiles" Style="{StaticResource FileListStyle}" 
                      MouseDoubleClick="ListViewFiles_MouseDoubleClick"
                      KeyDown="ListViewFiles_KeyDown"
                      ContextMenu="{StaticResource FileContextMenu}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя" Width="300">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Размер" Width="100" DisplayMemberBinding="{Binding Size}"/>
                        <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding Type}"/>
                        <GridViewColumn Header="Дата изменения" Width="120" DisplayMemberBinding="{Binding ModifiedDate}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Border x:Name="placeholder" Background="White" Visibility="Visible">
                <TextBlock Text="Подключитесь к серверу и авторизуйтесь для просмотра файлов" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          FontSize="16" Foreground="Gray" TextAlignment="Center"/>
            </Border>
        </Grid>

        <StatusBar Grid.Row="4" Background="LightGray">
            <StatusBarItem>
                <TextBlock x:Name="tbStatus" Text="Не подключено"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="tbItemCount" Text="Элементов: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
